{
  "name": "resume-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "serve": "vite preview",
    "test": "bun test",
    "test:coverage": "bunx tsx scripts/check-coverage.ts",
    "deploy": "wrangler deploy",
    "deploy:prod": "NODE_ENV=production bun run build && bun run generate-pdf && bun run deploy",
    "cf-typegen": "wrangler types",
    "generate-pdf": "tsx scripts/generate-pdf.ts",
    "validate-punctuation": "tsx config/validate-punctuation.ts",
    "format:fix": "oxfmt --write src config scripts",
    "format": "oxfmt --check src config scripts",
    "lint": "oxlint src config scripts",
    "lint:fix": "oxlint --fix src config scripts",
    "check": "oxlint src config scripts && oxfmt --check src config scripts && bunx tsx scripts/check-coverage.ts && bun run validate-punctuation",
    "check:fix": "oxlint --fix src config scripts && oxfmt --write src config scripts && bun test && bun run validate-punctuation",
    "favicon": "node scripts/convert-favicon.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/nitro-v2-vite-plugin": "^1.132.31",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "lucide-react": "^0.544.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.10",
    "@react-pdf/renderer": "^4.3.1",
    "@types/bun": "^1.3.9",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^5.0.4",
    "husky": "^9.1.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.42.0"
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
